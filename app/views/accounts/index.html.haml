%h1 Lista de Cuentas 

%table{:class => "table table-striped"}
  %thead
    %tr
      %th Nombre
      %th Fecha de creación
      %th Fecha de expiración
      %th
      %th
      %th

  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.name
        %td= account.date_from
        %td= account.date_to
        %td= link_to 'Show', account
        %td= link_to 'Edit', edit_account_path(account)
        %td= link_to 'Destroy', account, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'Crear cuenta', new_account_path, class: "btn btn-success"
